<!-- include head and header files -->
<%- include('../../shared-views/includes/head', {pageTitle: 'Login'}) %>
<link rel="stylesheet" href="/styles/forms.css">
<link rel="stylesheet" href="/styles/auth.css">
</head>
<body>
    <%- include('../../shared-views/includes/header') %>
    <main>
        <form class="login" action="/login" method="POST">
            <h1>Login</h1>
            <% if(inputData.errorMessage) { %>
                <span class="error-message">Invalid input: <%= inputData.errorMessage%></span>
            <% } %>
            <div class="form-element">
                <label for="email">Email Address</label>
                <input type="email" name="email" id="email" value="<%= inputData.email %>" required>
                <i class="fa-regular fa-envelope"></i>
            </div>
            <div class="form-element">
                <label for="password">Password</label>
                <input type="password" name="password" id="password" minlength="5" value="<%= inputData.password %>" required >
                <i class="fa-solid fa-lock"></i>
            </div>
            <p class="switch-to-login"><a href="/signup">Create Account</a></p>
            <button class="btn">Login</button>
        </form>
    </main>
<%- include('../../shared-views/includes/footer') %>