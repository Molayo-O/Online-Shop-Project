<!-- include head and header files -->
<%- include('../../shared-views/includes/head', {pageTitle: product.title}) %>
<link rel="stylesheet" href="/styles/allProducts.css">
<script src="/scripts/cart-manager.js" defer></script>
</head>
<body>
    <%- include('../../shared-views/includes/header') %>
    <main id="product-details">
        <header>
            <img src="<%= product.imageUrl%>" alt="<%= product.title%>">
            <div id="product-info">
                <h1><%=product.name%></h1>
                <p>$<%=product.price%></p>
                <button class="btn" data-productid="<%= product.id %>">Add to Cart</button>
            </div>
        </header>
        <p><%=product.description%></p>
    </main>
<%- include('../../shared-views/includes/footer') %>